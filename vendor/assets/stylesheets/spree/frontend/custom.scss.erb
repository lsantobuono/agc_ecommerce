.tag-variantes {
	padding-left:0.5em;
	padding-right:0.5em;
	display:inline-block;
	font-size:0.8em;
	background-color: $light-brown;
	color:white;
	margin-top:-2.4em;
	margin-left:15px;
	line-height: 20px;
	left:0;
	position:absolute;
}
.tag-variantes::after {
 	position: absolute;
	content: '';
	display: block;
	width: 0;
	height: 0;
	border: .9em solid $light-brown;
	border-bottom-color: transparent;
	border-top-color: transparent;
	border-right-color: transparent;
	position: absolute;
	right: -1.7em;
	top:0em;
}

