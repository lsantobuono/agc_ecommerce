$dark-grey: #333333;
$light-grey: #cccccc;
$light-orange:#ffc266;


@font-face {  
	font-family: 'olney_light';  
	src: url(<%= asset_path 'olney_light.otf' %>);
	font-weight: normal;  
	font-style: normal;  
}  

body{  
	font-family: 'olney_light';  
}  

/* header */

#spree-header {
	background: url(<%= asset_path 'background-header.jpg' %>) center center no-repeat;	
}


/* Left bar */

