<% if defined? product 
    @product =  product 
    end %>
    
<% if defined?(image) && image %>
  <%= image_tag image.attachment.url(:product), :style => "xwidth:100%", :itemprop => "image", :class => 'img-responsive' %>
<% else %>
  <%= product_image(@product, :itemprop => "image",:style => "xwidth:100%", :class => 'img-responsive') %>
<% end %>
