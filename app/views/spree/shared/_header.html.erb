<div id="spree-header">
  <header id="header" data-hook style="padding-bottom:10px;">
    <div class="container">
      <div class="row">
        <figure id="logo" class="col-md-4 col-sm-3" style="left:10%" data-hook>
          <%= link_to root_path do %>
            <%= image_tag("logo.png", alt: "logo agc", style: "max-height:6em; max-width:13 em;") %>
          <% end %>
        </figure>
        <%= render :partial => 'spree/shared/nav_bar' %>
      </div>
    </div>
  </header>
  <div class="container">
    <%= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>
  </div>
</div>
