<%= form_for @message, url: spree.messages_path do |f| %>
  <% if f.object.errors.any? %>
    <div class="alert alert-danger">
      <%= render 'shared/error_messages', object: f.object %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <div class="field">
        <%= f.label :name, "Nombre y Apellido *" %><br>
        <%= f.text_field :name, required: true %>
      </div>

      <div class="field">
        <%= f.label :tel, "Teléfono *" %><br>
        <%= f.text_field :tel, required: true %>
      </div>

      <div class="field">
        <%= f.label :email, "E-Mail *" %><br>
        <%= f.email_field :email, required: true %>
      </div>



      <div class="field">
        <%= f.label :enterprise, "Empresa" %><br>
        <%= f.text_field :enterprise %>
      </div>
    </div>

    <div class="col-sm-12 col-md-6">
      
      <div class="field">
        <%= f.label :subject ,"Asunto" %><br>
        <label class="label-select" style="width:200px; font:7px; height:30px">
          <%= f.select :subject , ["Stock y Reposición","Envios y Despachos","Asistencia Técnica",
                                "Consulta General"], { required: true },{:style => "width:200px;height:30px"} %>
        </label>
      </div>

      <div class="field">
        <%= f.label :content, "Mensaje *" %><br>
        <%= f.text_area :content, required: true, size: "30x5" %>
      </div>

      <div class="actions">
        <%= f.submit 'ENVIAR', class: 'btn btn-primary boton-contacto', id: 'submit-contact' %>
      </div>
    </div>
  </div>

  <%= recaptcha_tags %>
<% end %>
