
<div data-hook="admin_category_form_fields">
  <div class="row">
    <div class="col-md-8" data-hook="admin_category_form_right">
      <div class="row">
        <div class="col-md-4">
          <div data-hook="admin_category_form_name" class="omega two columns">
            <%= f.field_container :name, class: ['form-group'] do %>
              <%= f.label :name, Spree.t(:name) %>
              <%= f.text_field :name, class: 'form-control' %>
              <%= f.error_message_on :name %>
            <% end %>
          </div>
          <div data-hook="admin_category_form_parent" class="omega two columns">
            <%= f.field_container :parent_id, class: ['form-group'] do %>
              <%= f.label :parent_id, Spree.t(:parent_id) %>
              <% if !@categories.nil? %>
                <%= f.collection_select :parent_id, @categories, :id, :name , {:include_blank => 'Categoría raíz'}, class: "form-control chosen-select" %>
              <% end %>
              <%= f.error_message_on :parent_id %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>