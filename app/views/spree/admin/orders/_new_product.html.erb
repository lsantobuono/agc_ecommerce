<div id="create-product" data-hook class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title"><%= Spree.t(:add_new_product) %></h1>
  </div>
  <div class="panel-body">
    <%= form_for [:admin, @product] do |f| %>
      <%= f.hidden_field :shipping_category_id %>
      <%= f.hidden_field :available_on %>
      <%= hidden_field_tag :add_to_order, @order.number %>
      <fieldset data-hook="new_product">
        <%= f.field_container :name, :class => ['form-group'] do %>
          <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
          <%= f.text_field :name, :class => 'form-control title' %>
          <%= f.error_message_on :name %>
        <% end %>

        <div data-hook="new_product_attrs" class="row">
          <div data-hook="new_product_price" class="col-md-6">
            <%= f.field_container :price, :class => ['form-group'] do %>
              <%= f.label :price, Spree.t(:price) %> <span class="required">*</span>
              <%= f.text_field :price, :value => number_to_currency(@product.price, :unit => ''), :class => 'form-control' %>
              <%= f.error_message_on :price %>
            <% end %>
          </div>
        </div>

        <div class="form-actions" data-hook="buttons">
          <%= button Spree.t('actions.add'), 'ok', 'submit', {class: 'btn-success'} %>
        </div>


      </fieldset>
    <% end %>
  </div>
</div>
