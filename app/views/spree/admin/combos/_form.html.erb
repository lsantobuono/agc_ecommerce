    <div class="col-md-4" data-hook="admin_combo_form_right">
      <div data-hook="admin_combo_form_name" class="omega two columns">
        <%= f.field_container :name, class: ['form-group'] do %>
          <%= f.label :name, Spree.t(:name) %>
          <%= f.text_field :name, class: 'form-control' %>
          <%= f.error_message_on :name %>
        <% end %>
      </div>
      <div data-hook="admin_combo_form_code" class="omega two columns">
        <%= f.field_container :code, class: ['form-group'] do %>
          <%= f.label :code, Spree.t(:code) %>
          <%= f.text_field :code, class: 'form-control' %>
          <%= f.error_message_on :code %>
        <% end %>
      </div>
     <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title">
            Productos
          </h1>
        </div>
        <%= f.fields_for :combo_lines do |line_form| %>
          <div class="row">
            <div class="col-sm-6">
              <%= line_form.text_field :product_id, class: 'form-control' %>
            </div>
            <div class="col-sm-4">
              <%= line_form.text_field :quantity, class: 'form-control' %>
            </div>
            <div class="col-sm-2">
              <%= line_form.link_to_remove do %>
                <span class="icon icon-remove"></span>
              <% end %>
            </div>
          </div>
        <% end %>
        <p>
          <br>
          <%= f.link_to_add :combo_lines do %>
            <button class="btn btn-default">
              Agregar producto
              <span class="icon icon-add"></span>
            </button>

          <% end %>
        </p>
      </div>
    </div>

  </div>
</div>
