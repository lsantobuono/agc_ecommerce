<% content_for :page_actions do %>
  <% if can?(:create, Combo) %>
    <%= button_link_to Spree.t(:new_combo), new_object_url, { class: "btn-success", icon: 'add', id: 'admin_new_combo' } %>
  <% end %>
<% end %>

<% content_for :page_title do %>
  Combo: 
  <%= @combo.name %>
<% end %>

<%#= render partial: 'spree/admin/shared/combo_tabs', locals: {current: :details} %>
<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @combo } %>

<%= nested_form_for [:admin, @combo], method: :put, html: { multipart: true } do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
